{
  "apiVersion": 2,
  "name": "generatepress-child/product-card",
  "title": "Product Card",
  "category": "widgets",
  "description": "A fixed-layout product card with rating, bullets, offer, CTA, and footer link.",
  "icon": "index-card",
  "supports": {
    "align": false,
    "html": false,
    "color": false,
    "spacing": {
      "margin": true,
      "padding": true
    }
  },
  "attributes": {
    "bannerText": { "type": "string", "default": "" },
    "bannerIconSource": { "type": "string", "default": "core" },
    "bannerIconName": { "type": "string", "default": "" },
    "bannerIconSvg": { "type": "string", "default": "" },
    "bannerUseGradient": { "type": "boolean", "default": false },
    "bannerColor1": { "type": "string", "default": "" },
    "bannerColor2": { "type": "string", "default": "" },
    "bannerTextColor": { "type": "string", "default": "" },
    "orderNumber": { "type": "string", "default": "" },
    "title": { "type": "string", "default": "" },
    "titleHeadingLevel": { "type": "string", "default": "h3" },
    "titleFontSize": { "type": "string", "default": "" },
    "titleColor": { "type": "string", "default": "" },
    "subheaderText": { "type": "string", "default": "" },
    "subheaderFontSize": { "type": "string", "default": "" },
    "subheaderColor": { "type": "string", "default": "" },
    "ratingScore": { "type": "string", "default": "" },
    "ratingTitle": { "type": "string", "default": "" },
    "ratingStarsCount": { "type": "number", "default": 5 },
    "ratingSubheader": { "type": "string", "default": "" },
    "bullets": {
      "type": "array",
      "default": [],
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "text": { "type": "string" }
        }
      }
    },
    "bulletsIconSource": { "type": "string", "default": "core" },
    "bulletsIconName": { "type": "string", "default": "check" },
    "bulletsIconSvg": { "type": "string", "default": "" },
    "offerBackgroundColor": { "type": "string", "default": "" },
    "offerBorderColor": { "type": "string", "default": "" },
    "offerIconSource": { "type": "string", "default": "core" },
    "offerIconName": { "type": "string", "default": "info" },
    "offerIconSvg": { "type": "string", "default": "" },
    "offerText": { "type": "string", "default": "" },
    "ctaText": { "type": "string", "default": "" },
    "ctaUrl": { "type": "string", "default": "" },
    "ctaOpenInNewTab": { "type": "boolean", "default": false },
    "ctaIconSource": { "type": "string", "default": "core" },
    "ctaIconName": { "type": "string", "default": "arrow-right" },
    "ctaIconSvg": { "type": "string", "default": "" },
    "ctaIconPosition": { "type": "string", "default": "right" },
    "ctaBackgroundColor": { "type": "string", "default": "" },
    "ctaTextColor": { "type": "string", "default": "" },
    "ctaHoverBackgroundColor": { "type": "string", "default": "" },
    "ctaHoverTextColor": { "type": "string", "default": "" },
    "ctaWidth": { "type": "string", "default": "full" },
    "footerText": { "type": "string", "default": "" },
    "bottomLinkText": { "type": "string", "default": "" },
    "bottomLinkUrl": { "type": "string", "default": "" },
    "bottomLinkColor": { "type": "string", "default": "" },
    "bottomLinkIconSource": { "type": "string", "default": "core" },
    "bottomLinkIconName": { "type": "string", "default": "arrow-right" },
    "bottomLinkIconSvg": { "type": "string", "default": "" },
    "bottomLinkOpenInNewTab": { "type": "boolean", "default": false },
    "cardBackgroundColor": { "type": "string", "default": "" },
    "cardBorderColor": { "type": "string", "default": "" },
    "cardBorderWidth": { "type": "number", "default": 1 },
    "cardBorderRadius": { "type": "number", "default": 16 },
    "cardBoxShadow": { "type": "string", "default": "" },
    "cardPadding": {
      "type": "object",
      "default": { "top": "", "right": "", "bottom": "", "left": "" }
    },
    "cardMargin": { "type": "object", "default": {} },
    "rowSpacing": { "type": "number", "default": 16 }
  },
  "editorScript": "file:./edit.js",
  "editorStyle": "file:./editor.css",
  "style": "file:./style.css",
  "render": "generatepress_child_render_product_card_block"
}
